<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="MainColor">#FF4B4B4B</Color>
    <SolidColorBrush x:Key="MainColorBrush"
                     Color="{StaticResource MainColor}"/>

    <Color x:Key="WondowBorderColor">#FF3B3B3E</Color>
    <SolidColorBrush x:Key="WondowBorderBrush"
                     Color="{StaticResource MainColor}" />

    <Color x:Key="BackgroundColor">#FF383838</Color>
    <SolidColorBrush x:Key="BackgroundBrush"
                     Color="{StaticResource BackgroundColor}" />

    <Color x:Key="ForegroundColor">#FF62F8FF</Color>
    <SolidColorBrush x:Key="ForegroundBrush" 
                     Color="{StaticResource ForegroundColor}"/>

    <!--<Color x:Key="ForegroundColor">#FF5BBBBF</Color>
    <SolidColorBrush x:Key="ForegroundBrush"
                     Color="{StaticResource ForegroundColor}" />-->

    <Color x:Key="BorderColor">#FF323131</Color>
    <SolidColorBrush x:Key="BorderBrush"
                     Color="{StaticResource BorderColor}" />

    <Color x:Key="DeepColor">#FF1F1F1F</Color>
    <SolidColorBrush x:Key="DeepBrush"
                     Color="{StaticResource DeepColor}" />

    <Color x:Key="MouseOverBorderColor">#FF5D5C5C</Color>
    <SolidColorBrush x:Key="MouseOverBorderBrush"
                     Color="{StaticResource MouseOverBorderColor}" />
</ResourceDictionary>